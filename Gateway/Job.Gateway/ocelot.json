{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "job-auth-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "jobuser-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/job/{everything}",  
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "jobcompany-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/jobcompany/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "jobpayment-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/jobpayment/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE" ]
    },

    //File Routes

    {
      "DownstreamPathTemplate": "/{filename}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "jobcompany-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/companyFiles/{filename}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/{filename}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "jobuser-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/userFiles/{filename}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/{fileName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "job-auth-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/authFiles/{fileName}",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://job-gateway:8080"
  }
}